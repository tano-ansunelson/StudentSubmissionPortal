@{
    ViewBag.Title = "Student Dashboard";

    // Dummy Student Data
    var student = new
    {
        Initials = "FO",
        Name = "Felix Owusu",
        Email = "felix@st.knust.edu.gh",
        Major = "Chemistry",
        Year = "Senior",
        StudentID = "#20250001"
    };

    // Dummy Project List
    var projects = new[] {
        new {
            Title = "AI-Driven Traffic Control System",
            Description = "Research and implementation of a smart traffic light optimization system.",
            Supervisor = "Dr. Sarah Williams",
            Deadline = "2025-05-15"
        },
        new {
            Title = "Blockchain for Supply Chain",
            Description = "Building a decentralized system for transparent supply chain tracking.",
            Supervisor = "Prof. Michael Chen",
            Deadline = "2025-04-20"
        },
        new {
            Title = "Sustainable Energy Monitor",
            Description = "IoT-based application for monitoring energy consumption efficiently.",
            Supervisor = "Dr. Sarah Williams",
            Deadline = "2025-06-01"
        }
    };
}

<div class="container-fluid py-5" style="background-color:#f8f9fa;">
    <div class="row g-4">

        <!-- LEFT: STUDENT PROFILE -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4">

                <div class="card-body p-4">

                    <h5 class="fw-bold mb-4 text-primary d-flex align-items-center">
                        <i class="bi bi-person-circle me-2 fs-4"></i>
                        Student Profile
                    </h5>

                    <!-- Avatar + Name -->
                    <div class="d-flex align-items-center mb-4">
                        <div class="rounded-circle bg-primary bg-opacity-10 text-primary
                                    d-flex justify-content-center align-items-center fw-bold me-3 shadow-sm"
                             style="width:75px; height:75px; font-size:26px;">
                            @student.Initials
                        </div>

                        <div>
                            <h5 class="fw-bold mb-1">@student.Name</h5>
                            <small class="text-muted">@student.Email</small>
                        </div>
                    </div>

                    <hr />

                    <!-- Student info -->
                    <div class="mt-3">
                        <p class="mb-2"><strong class="text-dark">Major:</strong> @student.Major</p>
                        <p class="mb-2"><strong class="text-dark">Year:</strong> @student.Year</p>
                        <p class="mb-0"><strong class="text-dark">Student ID:</strong> @student.StudentID</p>
                    </div>

                </div>
            </div>
        </div>

        <!-- RIGHT: ASSIGNED PROJECTS -->
        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="fw-bold text-dark">Assigned Projects</h3>
                <span class="badge bg-primary px-3 py-2 shadow-sm" style="font-size:0.9rem;">
                    @projects.Length Active Projects
                </span>
            </div>

            <div class="card border-0 shadow-sm rounded-4">

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Project Title</th>
                                <th>Supervisor</th>
                                <th>Deadline</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var project in projects)
                            {
                                <tr>

                                    <!-- PROJECT TITLE + DESCRIPTION -->
                                    <td style="width:40%;">
                                        <div class="fw-semibold">@project.Title</div>
                                        <small class="text-muted d-block">@project.Description</small>
                                    </td>

                                    <!-- SUPERVISOR -->
                                    <td class="text-secondary">
                                        <i class="bi bi-person-workspace me-1"></i>
                                        @project.Supervisor
                                    </td>

                                    <!-- DEADLINE -->
                                    <td class="text-dark">
                                        <i class="bi bi-calendar-event me-1 text-primary"></i>
                                        @project.Deadline
                                    </td>

                                    <!-- SUBMIT BUTTON -->
                                    <td class="text-end">
                                        <a href="#" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm d-inline-flex align-items-center gap-1">
                                            Submit <i class="bi bi-arrow-right-short fs-5"></i>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>
        </div>

        <!-- PARTIAL -->
        @Html.Partial("_MyAssignment")

    </div>
</div>
