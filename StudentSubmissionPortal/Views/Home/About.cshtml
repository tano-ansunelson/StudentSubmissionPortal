@{
    ViewData["Title"] = "Registration Page";
    Layout = "_Layout";
}

<div class="container">
    <h1>Create an Account</h1>
    <p class="subtitle">Join Project Hub to start managing your projects.</p>

    <form method="post">

        <div class="form-group">
            <label for="FullName">Full Name</label>
            <input type="text" id="FullName" name="FullName" placeholder="John Doe" required />
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" id="Email" name="Email" placeholder="me@example.com" required />
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" id="Password" name="Password" required />
        </div>

        <div class="form-group">
            <label for="Role">Role</label>
            <select id="Role" name="Role" required>
                <option value="">Select your role</option>
                <option value="Student">Student</option>
                <option value="Supervisor">Supervisor</option>
            </select>
        </div>

        <button type="submit">Create Account</button>

    </form>

    <p class="login-link">
        Already have an account?
        <a asp-controller="Accounts" asp-action="Login">Login</a>
    </p>
</div>

