@{
    ViewBag.Title = "About | Student Project Submission System";
}

<div class="container py-5">

    <!-- HEADER SECTION -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-light">About the Student Project Submission Management System</h1>
        <p class="text-secondary fs-5 mt-3">
            A modern platform designed to simplify project submissions, supervision, grading, and academic communication.
        </p>
    </div>

    <!-- IMAGE + TEXT SECTION -->
    <div class="row align-items-center mb-5">

        <div class="col-lg-6 mb-4 mb-lg-0">
            <img src="https://images.unsplash.com/photo-1521737604893-d14cc237f11d"
                 class="img-fluid rounded-4 shadow-lg"
                 alt="Students collaborating" />
        </div>

        <div class="col-lg-6 text-light">
            <h3 class="fw-bold mb-3">Built for Students & Supervisors</h3>
            <p class="text-secondary fs-6">
                This system allows students to submit academic projects seamlessly while enabling supervisors to review,
                approve, and grade submissions within a centralized platform. It reduces administrative delays and enhances
                workflow efficiency for both students and educators.
            </p>

            <ul class="list-unstyled fs-6">
                <li class="mb-3 d-flex align-items-start">
                    <i class="bi bi-check-circle-fill text-success me-2 fs-5"></i>
                    Fast digital project submission
                </li>
                <li class="mb-3 d-flex align-items-start">
                    <i class="bi bi-check-circle-fill text-success me-2 fs-5"></i>
                    Real-time feedback & grading
                </li>
                <li class="mb-3 d-flex align-items-start">
                    <i class="bi bi-check-circle-fill text-success me-2 fs-5"></i>
                    Automated progress tracking
                </li>
            </ul>
        </div>

    </div>

    <!-- FEATURES SECTION -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-light">Key Features</h2>
        <p class="text-secondary">Designed to streamline and digitalize the academic project workflow.</p>
    </div>

    <div class="row g-4">

        <!-- Feature 1 -->
        <div class="col-md-4">
            <div class="card bg-dark border-0 shadow-lg p-4 h-100 rounded-4">
                <div class="text-center mb-3">
                    <i class="bi bi-upload text-info fs-1"></i>
                </div>
                <h5 class="text-light text-center fw-bold">Easy Project Upload</h5>
                <p class="text-secondary text-center">
                    Students can upload files instantly with tracking for deadlines and submission status.
                </p>
            </div>
        </div>

        <!-- Feature 2 -->
        <div class="col-md-4">
            <div class="card bg-dark border-0 shadow-lg p-4 h-100 rounded-4">
                <div class="text-center mb-3">
                    <i class="bi bi-shield-check text-success fs-1"></i>
                </div>
                <h5 class="text-light text-center fw-bold">Secure Review System</h5>
                <p class="text-secondary text-center">
                    Supervisors securely access projects, leave comments, approve or reject work efficiently.
                </p>
            </div>
        </div>

        <!-- Feature 3 -->
        <div class="col-md-4">
            <div class="card bg-dark border-0 shadow-lg p-4 h-100 rounded-4">
                <div class="text-center mb-3">
                    <i class="bi bi-bar-chart-line text-warning fs-1"></i>
                </div>
                <h5 class="text-light text-center fw-bold">Progress & Grading</h5>
                <p class="text-secondary text-center">
                    Students track grades, submissions, deadlines & supervisor feedback in real-time.
                </p>
            </div>
        </div>

    </div>

    <!-- FINAL SECTION -->
    <div class="text-center mt-5">
        <h3 class="fw-bold text-light">A Smarter Way to Manage Academic Projects</h3>
        <p class="text-secondary fs-6">
            This platform empowers institutions to enhance productivity, reduce manual workload,
            and ensure accountability throughout the academic project lifecycle.
        </p>
    </div>

</div>
