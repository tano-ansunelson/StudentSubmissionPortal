@{
    ViewBag.Title = "Contact Us | Student Project Submission Management System";
}

<div class="container py-5">

    <!-- PAGE HEADER -->
    <div class="text-center mb-5">
        <i class="bi bi-chat-dots-fill text-info fs-1 mb-3"></i>
        <h1 class="fw-bold text-light">Contact Us</h1>
        <p class="text-secondary fs-6 mt-2">
            We’re here to assist you with any questions or issues regarding the Student Project Submission System.
        </p>
    </div>

    <div class="row g-4">

        <!-- LEFT SIDE: CONTACT DETAILS -->
        <div class="col-lg-5">

            <div class="card bg-dark border-0 shadow-lg p-4 rounded-4">

                <h4 class="fw-bold text-light mb-4 d-flex align-items-center">
                    <i class="bi bi-info-circle-fill text-warning fs-4 me-2"></i>
                    Get in Touch
                </h4>

                <div class="mb-4 d-flex">
                    <i class="bi bi-telephone-fill text-success fs-4 me-3"></i>
                    <div>
                        <h6 class="text-light fw-bold mb-1">Phone</h6>
                        <p class="text-secondary mb-0">+233 54 123 4567</p>
                    </div>
                </div>

                <div class="mb-4 d-flex">
                    <i class="bi bi-envelope-at-fill text-primary fs-4 me-3"></i>
                    <div>
                        <h6 class="text-light fw-bold mb-1">Email</h6>
                        <p class="text-secondary mb-0">support@studentprojects.com</p>
                    </div>
                </div>

                <div class="mb-4 d-flex">
                    <i class="bi bi-geo-alt-fill text-danger fs-4 me-3"></i>
                    <div>
                        <h6 class="text-light fw-bold mb-1">Location</h6>
                        <p class="text-secondary mb-0">KNUST Campus, Kumasi, Ghana</p>
                    </div>
                </div>

                <div class="d-flex">
                    <i class="bi bi-clock-fill text-info fs-4 me-3"></i>
                    <div>
                        <h6 class="text-light fw-bold mb-1">Office Hours</h6>
                        <p class="text-secondary mb-0">Mon - Fri: 9AM - 5PM</p>
                    </div>
                </div>

            </div>
        </div>

        <!-- RIGHT SIDE: CONTACT FORM -->
        <div class="col-lg-7">
            <div class="card bg-dark border-0 shadow-lg p-4 rounded-4">

                <h4 class="fw-bold text-light mb-4 d-flex align-items-center">
                    <i class="bi bi-pencil-square text-success fs-4 me-2"></i>
                    Send Us a Message
                </h4>

                <form>

                    <div class="mb-4">
                        <label class="text-light fw-semibold mb-1">Full Name</label>
                        <input type="text" class="form-control bg-black text-light border-secondary" placeholder="Enter your name" />
                    </div>

                    <div class="mb-4">
                        <label class="text-light fw-semibold mb-1">Email Address</label>
                        <input type="email" class="form-control bg-black text-light border-secondary" placeholder="Enter your email" />
                    </div>

                    <div class="mb-4">
                        <label class="text-light fw-semibold mb-1">Subject</label>
                        <input type="text" class="form-control bg-black text-light border-secondary" placeholder="Message subject" />
                    </div>

                    <div class="mb-4">
                        <label class="text-light fw-semibold mb-1">Message</label>
                        <textarea class="form-control bg-black text-light border-secondary" rows="5" placeholder="Write your message..."></textarea>
                    </div>

                    <button class="btn btn-primary px-4 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-send-fill me-2"></i> Submit Message
                    </button>

                </form>

            </div>
        </div>

    </div>

    <!-- MAP SECTION -->
    <div class="mt-5">
        <h4 class="fw-bold text-light mb-3 d-flex align-items-center">
            <i class="bi bi-map-fill text-danger fs-4 me-2"></i>
            Our Office Location
        </h4>

        <div class="rounded-4 overflow-hidden shadow-lg" style="height: 350px;">
            <iframe src="https://maps.google.com/maps?q=KNUST%20Kumasi&t=&z=13&ie=UTF8&iwloc=&output=embed"
                    width="100%" height="100%" style="border:0;">
            </iframe>
        </div>
    </div>

</div>
