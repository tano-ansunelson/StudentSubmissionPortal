<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Submission Portal</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentSubmissionPortal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        /* Navbar initial state */
        .navbar-custom {
            background-color: #0C2B4E; /* Primary green color */
            transition: background-color 0.4s ease, box-shadow 0.4s ease, color 0.4s ease;
        }

        /* Transparent navbar on scroll */
        .navbar-transparent {
            background-color: #0C2B4E !important; /* Slightly transparent green */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .nav-link,
        .navbar-brand {
            color: #fff !important;
        }

        .btn-login,
        .btn-register {
            border-radius: 8px;
            font-weight: 500;
        }

        .btn-login {
            background-color: #fff;
            color: #388E3B;
            border: 1px solid #fff;
        }

            .btn-login:hover {
                background-color: #f1f1f1;
                color: #2e7d32;
            }

        .btn-register {
            background-color: transparent;
            color: #fff;
            border: 1px solid #fff;
        }

            .btn-register:hover {
                background-color: #fff;
                color: #388E3B;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold d-flex align-items-center" href="@Url.Action("Index", "Home")">
                    <span class="fs-3 me-2">🎓</span>
                    AcademicPortal
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center link-opacity-100-hover">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item ms-lg-3">
                            <a class="btn btn-outline-light d-flex align-items-center" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Login
                            </a>
                        </li>
                        <li class="nav-item ms-lg-2">
                            <a class="btn btn-outline-light d-flex align-items-center" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus me-2"></i> Register
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <!-- Spacer to prevent content hiding behind navbar -->
    <div style="height: 80px;"></div>

    <!-- Main Content -->
    <main class="container my-4">
        @RenderBody()
    </main>
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // const navbar = document.getElementById('mainNavbar');

        // Add scroll effect
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('navbar-transparent');
            } else {
                navbar.classList.remove('navbar-transparent');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
@Html.Partial("_Footer")
</html>
