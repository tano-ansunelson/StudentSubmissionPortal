@{
    ViewBag.Title = "Submissions History";

    // Dummy submissions
    var submissions = new[] {
        new {
            Project = "Blockchain for Supply Chain",
            Status = "Submitted",
            StatusType = "success",   // Bootstrap color
            DateSubmitted = "2025-04-18",
            Grade = "Pending",
            GradeColor = "text-muted", // italic
            HasFile = true
        },
        new {
            Project = "AI-Driven Traffic Control System",
            Status = "Late",
            StatusType = "danger",
            DateSubmitted = "2025-05-16",
            Grade = "B+",
            GradeColor = "text-primary fw-bold",
            HasFile = true
        }
    };
}

<div class="container py-5">

    <h3 class="fw-bold mb-4">My Submissions History</h3>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Project</th>
                        <th>Status</th>
                        <th>Date Submitted</th>
                        <th>Grade</th>
                        <th class="text-end">File</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in submissions)
                    {
                        <tr>
                            <td>@item.Project</td>

                            <td>
                                <span class="badge bg-@item.StatusType px-3 py-2">
                                    @item.Status
                                </span>
                            </td>

                            <td>@item.DateSubmitted</td>

                            <td class="@item.GradeColor">
                                @item.Grade
                            </td>

                            <td class="text-end">
                                @if (item.HasFile)
                                {
                                    <a href="#" class="text-decoration-none fs-5">
                                        <i class="bi bi-download">Download</i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
