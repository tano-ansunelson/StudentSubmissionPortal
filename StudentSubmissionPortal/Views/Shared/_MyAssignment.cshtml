@{
    ViewBag.Title = "Submissions History";

    // Dummy submissions
    var submissions = new[] {
        new {
            Project = "Blockchain for Supply Chain",
            Status = "Submitted",
            StatusType = "success",
            DateSubmitted = "2025-04-18",
            Grade = "Pending",
            GradeColor = "text-warning fw-semibold fst-italic",
            HasFile = true
        },
        new {
            Project = "AI-Driven Traffic Control System",
            Status = "Late",
            StatusType = "danger",
            DateSubmitted = "2025-05-16",
            Grade = "B+",
            GradeColor = "text-info fw-bold",
            HasFile = true
        }
    };
}

<!-- MAIN CONTAINER -->
<div class="container py-5">

    <!-- PAGE TITLE -->
    <div class="mb-4">
        <h2 class="fw-bold text-light">My Submissions History</h2>
        <p class="text-secondary">View all project submissions and their grading progress</p>
    </div>

    <!-- CARD WRAPPER -->
    <div class="card bg-dark border-0 shadow-lg rounded-4 overflow-hidden">

        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">

                <thead class="bg-secondary text-light">
                    <tr>
                        <th>Project</th>
                        <th>Status</th>
                        <th>Date Submitted</th>
                        <th>Grade</th>
                        <th class="text-end">File</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in submissions)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Project</td>

                            <td>
                                <span class="badge bg-@item.StatusType px-3 py-2">
                                    @item.Status
                                </span>
                            </td>

                            <td>@item.DateSubmitted</td>

                            <td class="@item.GradeColor">@item.Grade</td>

                            <td class="text-end">
                                @if (item.HasFile)
                                {
                                    <a href="#" class="btn btn-sm btn-outline-info d-inline-flex align-items-center gap-2">
                                        <i class="bi bi-download"></i>
                                      
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
